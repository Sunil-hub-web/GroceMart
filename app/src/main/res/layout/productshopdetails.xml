<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/three_hundred"
        android:background="@drawable/homecard_back"
        android:layout_margin="@dimen/ten"
        android:id="@+id/first">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred"
            android:background="@drawable/back_loc"
            android:id="@+id/shopdetails"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Narendra Shop"
                android:textSize="@dimen/textSize"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/eight"
                android:textColor="@color/black"></TextView>

            <Button
                android:id="@+id/gotoshop"
                android:layout_width="@dimen/hundred_twenty"
                android:layout_height="@dimen/forty"
                android:layout_marginTop="@dimen/ten"
                android:background="@drawable/button_back"
                android:text="Go To Shop"
                android:layout_alignParentRight="true"
                android:textColor="@color/btntextcolor"
                android:layout_marginRight="@dimen/ten"
                android:textSize="@dimen/textSize"
                ></Button>

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16, Saheed Nagar, Bhubaneswar, Odisha 751007, India"
                android:textSize="@dimen/textSize"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/twenty_four"
                android:layout_below="@id/shopname"
                android:drawableLeft="@drawable/location_1"
                android:drawablePadding="10dp"
                android:textColor="@color/black"></TextView>

        </RelativeLayout>

        <TextView
            android:id="@+id/productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BB Royal Organic-Toor Dal"
            android:textSize="@dimen/textSize"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/fifteen"
            android:layout_marginTop="@dimen/eight"
            android:layout_below="@id/shopdetails"
            android:textColor="@color/black"></TextView>

        <LinearLayout
            android:id="@+id/spiner"
            android:layout_width="@dimen/two_hundred"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:background="@drawable/spiner_back"
            android:layout_below="@id/productname">
            <Spinner
                android:id="@+id/spinner_offer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/forty_five"
                android:spinnerMode="dropdown"
                android:backgroundTint="@color/black"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inc"
            android:layout_width="@dimen/hundred_fifty"
            android:layout_height="@dimen/forty"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="@dimen/thirty"
            android:background="@drawable/serach_back"
            android:layout_marginRight="@dimen/ten"
            android:layout_below="@+id/spiner"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginBottom="@dimen/ten">

            <TextView
                android:id="@+id/t3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:background="#0A2CE8"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:background="#0A2CE8"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:id="@+id/addtocart"
            android:layout_width="@dimen/hundred_twenty"
            android:layout_height="@dimen/forty"
            android:layout_marginTop="@dimen/thirty"
            android:background="@drawable/button_back"
            android:text="Add To cart"
            android:textColor="@color/btntextcolor"
            android:layout_marginLeft="@dimen/ten"
            android:textSize="@dimen/gotoshop_btn_textSize"
            android:layout_below="@id/spiner"
            android:layout_toRightOf="@id/inc"
            android:layout_marginBottom="@dimen/ten"></Button>

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="@dimen/eighty"
            android:layout_height="@dimen/ninety"
            android:src="@drawable/royal"
            android:layout_below="@id/shopdetails"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/ten"></ImageView>

    </RelativeLayout>

</RelativeLayout>
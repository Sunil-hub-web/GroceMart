<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#EEEEEE">

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:background="@drawable/homecard_back">

            <LinearLayout
                android:id="@+id/clicl_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mproduct_Image"
                    android:layout_width="@dimen/hundred"
                    android:layout_height="@dimen/seventy"
                    android:scaleType="fitCenter"
                    android:src="@drawable/meat"
                    android:layout_gravity="center"></ImageView>

                <TextView
                    android:id="@+id/text_MProductname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten"
                    android:text="@string/BBRoyal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen"
                    android:textStyle="bold"
                    android:maxEms="8"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:scrollHorizontally="true"></TextView>

                 <TextView
                     android:id="@+id/text_MProductDesc"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="@dimen/five"
                     android:text="@string/BBRoyal"
                     android:textColor="@color/black"
                     android:textSize="@dimen/thirteen"
                     android:textStyle="bold"
                     android:maxEms="8"
                     android:ellipsize="end"
                     android:singleLine="true"
                     android:layout_gravity="center"
                     android:scrollHorizontally="true"></TextView>

            </LinearLayout>

            <Button
                android:id="@+id/btn_mgotoShop"
                android:layout_width="@dimen/hundred_twenty"
                android:layout_height="@dimen/forty"
                android:layout_below="@id/clicl_product"
                android:layout_margin="@dimen/seven"
                android:background="@drawable/button_back"
                android:text="Go To Shop"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="@dimen/textsize"
                android:layout_centerHorizontal="true"></Button>


        </RelativeLayout>

</RelativeLayout>
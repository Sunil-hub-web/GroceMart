<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#EEEEEE">

    <RelativeLayout
        android:id="@+id/r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten"
        android:background="@drawable/homecard_back"
        android:layout_marginBottom="@dimen/ten">

        <LinearLayout
            android:id="@+id/clicl_product3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product_RImage"
                android:layout_width="@dimen/hundred"
                android:layout_height="@dimen/eighty"
                android:scaleType="fitCenter"
                android:src="@drawable/chicken"
                android:layout_gravity="center"></ImageView>

            <TextView
                android:id="@+id/text_RProductname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize"
                android:textStyle="bold"
                android:maxEms="7"
                android:ellipsize="end"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_gravity="center"></TextView>

             <TextView
                 android:id="@+id/text_RProductDesc"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/five"
                 android:textColor="@color/black"
                 android:textSize="@dimen/textsize"
                 android:textStyle="bold"
                 android:maxEms="7"
                 android:ellipsize="end"
                 android:singleLine="true"
                 android:scrollHorizontally="true"
                 android:layout_gravity="center"></TextView>

        </LinearLayout>

        <Button
            android:id="@+id/gotoshop"
            android:layout_width="@dimen/hundred_twenty"
            android:layout_height="@dimen/forty"
            android:layout_below="@id/clicl_product3"
            android:layout_margin="@dimen/seven"
            android:background="@drawable/button_back"
            android:text="Go To Shop"
            android:textColor="@color/btntextcolor"
            android:textAllCaps="false"
            android:textSize="@dimen/textsize"></Button>


    </RelativeLayout>

</RelativeLayout>
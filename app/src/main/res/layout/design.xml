<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/homecard_back"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/second">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/back_loc"
            android:id="@+id/shopdetails1"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/shopname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bharathi Super Store"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"></TextView>

            <Button
                android:id="@+id/gotoshop2"
                android:layout_width="@dimen/gotoshop_button_width"
                android:layout_height="@dimen/gotoshop_button_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_back"
                android:text="Go To Shop"
                android:layout_alignParentRight="true"
                android:textColor="@color/btntextcolor"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/gotoshop_btn_textSize"
                ></Button>

            <TextView
                android:id="@+id/address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I Agraharam, Salem, Tamil Nadu 636001, India"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:layout_below="@id/shopname1"
                android:drawableLeft="@drawable/location_1"
                android:drawablePadding="10dp"
                android:textColor="@color/black"></TextView>

        </RelativeLayout>

        <TextView
            android:id="@+id/productname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aachi Biriyani Masala"
            android:textSize="@dimen/textSize"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/shopdetails1"
            android:textColor="@color/black"></TextView>

        <LinearLayout
            android:id="@+id/inc1"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="90dp"
            android:background="@drawable/serach_back"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/productname1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/t4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:background="#0A2CE8"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:background="#0A2CE8"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:id="@+id/addtocart1"
            android:layout_width="@dimen/gotoshop_button_width"
            android:layout_height="@dimen/gotoshop_button_height"
            android:layout_marginTop="90dp"
            android:background="@drawable/button_back"
            android:text="Add To cart"
            android:textColor="@color/btntextcolor"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/gotoshop_btn_textSize"
            android:layout_below="@id/productname1"
            android:layout_toRightOf="@id/inc1"
            android:layout_marginBottom="10dp"></Button>

        <ImageView
            android:id="@+id/imagecart1"
            android:layout_width="@dimen/cartimage_width"
            android:layout_height="@dimen/cartimage_height"
            android:src="@drawable/biriyani"
            android:layout_below="@id/shopdetails1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"></ImageView>

    </RelativeLayout>



</RelativeLayout>
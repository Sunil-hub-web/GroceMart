<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/homecard_back"
        android:layout_marginLeft="@dimen/fifteen"
        android:layout_marginRight="@dimen/fifteen"
        android:layout_marginTop="@dimen/fifteen"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addressdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginLeft="@dimen/twenty"
            android:textColor="@color/black"
            android:textSize="@dimen/edittextsize"></TextView>

        <Button
            android:id="@+id/btn_Delete"
            android:layout_width="@dimen/hundred"
            android:layout_height="@dimen/forty"
            android:background="#E32113"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_below="@id/addressdetails"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/twenty"></Button>

    </RelativeLayout>

</RelativeLayout>
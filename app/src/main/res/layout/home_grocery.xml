<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/rel_Click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/homecard_back"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:id="@+id/clicl_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/seven"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gproduct_Image"
                android:layout_width="@dimen/hundred"
                android:layout_height="@dimen/eighty"
                android:scaleType="fitCenter"
                android:src="@drawable/royal"
                android:layout_gravity="center"></ImageView>

            <TextView
                android:id="@+id/txt_GproductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxEms="7"
                android:ellipsize="end"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:layout_gravity="center"/>

            <!-- <TextView
                 android:id="@+id/txt_GproductDesc"
